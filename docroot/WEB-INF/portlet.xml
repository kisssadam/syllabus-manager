<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">

	<portlet>
		<portlet-name>curriculum-admin</portlet-name>
		<display-name>Curriculum Admin</display-name>
		<portlet-class>hu.unideb.inf.portlet.CurriculumAdminPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/curriculumadmin/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.curriculum.Language</resource-bundle>
		<portlet-info>
			<title>Curriculum Admin</title>
			<short-title>Curriculum Admin</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>subject-course-admin</portlet-name>
		<display-name>Subject Course Admin</display-name>
		<portlet-class>hu.unideb.inf.portlet.SubjectCourseAdminPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/subjectcourseadmin/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/subjectcourseadmin/edit.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/html/subjectcourseadmin/help.jsp</value>
		</init-param>
		<init-param>
			<name>about-template</name>
			<value>/html/subjectcourseadmin/about.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/subjectcourseadmin/config.jsp</value>
		</init-param>
		<init-param>
			<name>edit-defaults-template</name>
			<value>/html/subjectcourseadmin/edit-defaults.jsp</value>
		</init-param>
		<init-param>
			<name>edit-guest-template</name>
			<value>/html/subjectcourseadmin/edit-guest.jsp</value>
		</init-param>
		<init-param>
			<name>preview-template</name>
			<value>/html/subjectcourseadmin/preview.jsp</value>
		</init-param>
		<init-param>
			<name>print-template</name>
			<value>/html/subjectcourseadmin/print.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
			<portlet-mode>about</portlet-mode>
			<portlet-mode>config</portlet-mode>
			<portlet-mode>edit_defaults</portlet-mode>
			<portlet-mode>edit_guest</portlet-mode>
			<portlet-mode>preview</portlet-mode>
			<portlet-mode>print</portlet-mode>
		</supports>
		<resource-bundle>content.subjectcourseadmin.Language</resource-bundle>
		<portlet-info>
			<title>Subject Course Admin</title>
			<short-title>Subject Course Admin</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>